{
    "manifest_version": 3,
    "name": "Trendyol Kupon Scraper",
    "version": "1.0",
    "description": "Trendyol'da kuponlu ürünleri bulan ve listeleyen bir eklenti.",
    "permissions": ["activeTab", "scripting", "notifications"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.trendyol.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  